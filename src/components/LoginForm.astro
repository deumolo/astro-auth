---
const email = Astro.cookies.get('email')?.value || '';
const rememberMe = !!email;
---

<div class='flex justify-center self-center z-10'>
  <div class='p-12 bg-white mx-auto rounded-2xl w-100'>
    <div class='mb-4'>
      <h3 class='font-semibold text-2xl text-gray-800'>Ingresar</h3>
      <p class='text-gray-500'>Llena tus datos de cuenta</p>
    </div>
    <form class='space-y-5'>
      <div class='space-y-2'>
        <label class='text-sm font-medium text-gray-700 tracking-wide'
          >Email</label
        >
        <input
          value={email}
          name='email'
          class='w-full text-base px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-green-400'
          type='text'
          placeholder='mail@gmail.com'
        />
      </div>
      <div class='space-y-2'>
        <label class='mb-5 text-sm font-medium text-gray-700 tracking-wide'>
          Contraseña
        </label>
        <input
          name='password'
          class='w-full content-center text-base px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-green-400'
          type='password'
          placeholder='Tu contraseña'
        />
      </div>
      <div class='flex items-center justify-between'>
        <div class='flex items-center'>
          <input
            id='remember_me'
            name='remember_me'
            type='checkbox'
            class='h-4 w-4 bg-blue-500 focus:ring-blue-400 border-gray-300 rounded'
            checked={rememberMe.toString()}
          />
          <label for='remember_me' class='ml-2 block text-sm text-gray-800'>
            Recuerdame
          </label>
        </div>
        <div class='text-sm'>
          <a href='/login' class='text-green-400 hover:text-green-500'>
            Ya tienes cuenta ?
          </a>
        </div>
      </div>
      <div>
        <button
          type='submit'
          id='btn-submit'
          class='w-full flex justify-center bg-green-400 hover:bg-green-500 text-gray-100 p-3 rounded-full tracking-wide font-semibold shadow-lg cursor-pointer transition ease-in duration-500'
        >
          Ingresar
        </button>
      </div>

      <div class=''>
        <hr />
      </div>

      <div>
        <button
          type='button'
          id='btn-google'
          class='w-full flex justify-center bg-red-400 hover:bg-red-500 text-gray-100 p-3 rounded-full tracking-wide font-semibold shadow-lg cursor-pointer transition ease-in duration-500'
        >
          Ingresar google
        </button>
      </div>
    </form>
    <div class='pt-5 text-center text-gray-400 text-xs'>
      <span>
        Copyright © 2021-2022
        <a
          href='https://codepen.io/uidesignhub'
          rel=''
          target='_blank'
          title='Ajimon'
          class='text-green hover:text-green-500'>AJI</a
        ></span
      >
    </div>
  </div>
</div>

<script>
  import Swal from 'sweetalert2';
  import { actions } from 'astro:actions';
  import { GoogleAuthProvider, signInWithPopup } from 'firebase/auth';
  import { firebase } from '@/firebase/config';

  const form = document.querySelector('form') as HTMLFormElement;
  const btnSubmit = document.querySelector('#btn-submit') as HTMLButtonElement;
  const btnGoogle = document.querySelector('#btn-google') as HTMLButtonElement;

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    btnSubmit.setAttribute('disabled', 'disabled');

    const formData = new FormData(form);
    const { data, error } = await actions.loginUser(formData);

    if (error) {
      Swal.fire({
        icon: 'error',
        title: 'Credenciales no son correctas',
        text: error.message,
      });
      btnSubmit.removeAttribute('disabled');
      return;
    }

    window.location.replace('/protected');
  });

  btnGoogle.addEventListener('click', async (e) => {
    e.preventDefault();
    btnGoogle.setAttribute('disabled', 'disabled');

    try {
      //Paso 1 : Verificar credenciales en cliente
      const credentials = await signInWithPopup(
        firebase.auth,
        new GoogleAuthProvider()
      );

      //Paso 2 : Verificar credenciales en servidor
      const { data, error } = await actions.loginWithGoogle(credentials);

      if (error) {
        Swal.fire({
          icon: 'error',
          title: 'Credenciales no son correctas',
          text: error.message,
        });
        btnGoogle.removeAttribute('disabled');
        return;
      }
      btnGoogle.innerText = 'Ingresando...';
      window.location.replace('/protected');
    } catch (error) {
      btnGoogle.removeAttribute('disabled');
    }

    btnGoogle.removeAttribute('disabled');
  });
</script>
