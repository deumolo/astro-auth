---
import MainLayout from '@/layouts/MainLayout.astro';
import { ViewTransitions } from 'astro:transitions';

interface Props {
  heroColor?: string;
}

const { heroColor = 'green' }: Props = Astro.props;
---

<ViewTransitions />

<MainLayout>
  <link
    href='https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css'
    rel='stylesheet'
  />
  <div
    class='bg-no-repeat bg-cover bg-center relative'
    style='background-image: url(https://images.unsplash.com/photo-1579621970563-ebec7560ff3e?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1951&q=80);'
  >
    <div
      class=`absolute bg-gradient-to-b from-${heroColor}-500 to-${heroColor}-400 opacity-75 inset-0 z-0`
    >
    </div>
    <div class='min-h-screen sm:flex sm:flex-row mx-0 justify-center'>
      <div
        class='flex-col flex self-center p-10 sm:max-w-5xl xl:max-w-2xl z-10'
      >
        <div class='self-start hidden lg:flex flex-col text-white'>
          <img src='' class='mb-3' />
          <h1 class='mb-3 font-bold text-5xl'>Hi ? Welcome Back Aji</h1>
          <p class='pr-3'>
            Lorem ipsum is placeholder text commonly used in the graphic, print,
            and publishing industries for previewing layouts and visual mockups
          </p>
        </div>
      </div>

      <slot />
    </div>
  </div>
</MainLayout>
